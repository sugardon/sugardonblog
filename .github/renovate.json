{
  "extends": ["config:base"],
  "schedule": ["every weekend"],
  "dependencyDashboard": true,
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "labels": ["dependencies", "renovate"],
  "rangeStrategy": "bump",
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$", "README.md", "(^|/)build\\.ya?ml$"],
      "matchStrings": [
        "paketobuildpacks/builder:(?<currentValue>.*?)(\n|\".*)"
      ],
      "depNameTemplate": "docker",
      "datasourceTemplate": "paketobuildpacks/builder"
    }
  ]
}
