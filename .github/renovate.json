{
  "extends": ["config:base"],
  "schedule": ["every weekend"],
  "dependencyDashboard": true,
  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 0,
  "labels": ["dependencies", "renovate"],
  "rangeStrategy": "bump",
  "regexManagers": [
    {
      "description": "Update paketobuildpacks/builder",
      "fileMatch": ["README.md", "skaffold.ya?ml$", "(^|/)build\\.ya?ml$"],
      "matchStrings": ["paketobuildpacks\\/builder:(?<currentValue>.*?)[\n\"]"],
      "depNameTemplate": "paketobuildpacks/builder",
      "datasourceTemplate": "docker"
    }
  ]
}
